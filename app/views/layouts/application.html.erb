<!DOCTYPE html>
<html>
<head>
  <title><%= "#{@page_title} | " if @page_title %>Paravibe</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <div class="row">
    <div class="col-md-12 margin-top-3 margin-bottom-3">
      <% flash.each do |name, msg| %>
        <% if msg.is_a?(String) %>
          <div class="alert alert-<%= name == 'notice' ? "success" : "danger" %> alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <%= content_tag :span, msg, :class => "flash-#{name}" %>
          </div>
        <% end %>
      <% end %>

      <%= yield %>
    </div>
  </div>
</div>

</body>
</html>
