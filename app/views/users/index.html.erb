<% @page_title = "Users List" %>

<h1>Users list</h1>

<ul class="nav nav-pills">
  <li><%= link_to('Add New User', {:action => 'new'}, :class => 'action new') %></li>
</ul>

<% if !@users.empty? %>
  <div class="margin-top-1 margin-bottom-1">
    <span class="badge"><%= pluralize(@users.size, 'user') %></span>
  </div>

  <table class="table table-striped table-hover" summary="Users list">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
    <% @users.each do |user| %>
      <tr class="<%= cycle('odd', 'even') %>">
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= mail_to(user.email) %></td>
        <td class="actions">
          <ul class="list-inline">
            <li>
              <a title="Edit" href="<%= url_for({:action => 'edit', :id => user.id}) %>"><i class="glyphicon glyphicon-edit"></i></a>
            </li>
            <li>
              <a title="Delete" href="<%= url_for({:action => 'delete', :id => user.id}) %>"><i class="glyphicon glyphicon-remove-sign"></i></a>
            </li>
          </ul>
        </td>
      </tr>
    <% end %>
  </table>
<% else %>
  <div class="well well-sm margin-top-1">Users not found</div>
<% end %>
