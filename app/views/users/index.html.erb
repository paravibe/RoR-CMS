<% @page_title = "Users List" %>

<div class="container user index">
  <div class="row">
    <h1>Admin Users</h1>
  </div>

  <div class="row">
    <ul class="nav nav-pills">
      <li><%= link_to('Add New User', {:action => 'new'}, :class => 'action new') %></li>
    </ul>
  </div>

  <div class="row">
    <span class="badge"><%= pluralize(@users.size, 'user') %></span> found
  </div>

  <div class="row">
    <table class="table table-striped table-hover" summary="Users list">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
      <% @users.each do |user| %>
      <tr class="<%= cycle('odd', 'even') %>">
        <td><%= user.name %></td>
        <td><%= mail_to(user.email) %></td>
        <td class="actions">
          <span class="glyphicon glyphicon-edit"></span><%= link_to('Edit', {:action => 'edit', :id => user.id}, :class => 'action edit') %>
            <span class="glyphicon glyphicon-remove-sign"></span><%= link_to('Delete', {:action => 'delete', :id => user.id}, :class => 'action delete') %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>

</div>
