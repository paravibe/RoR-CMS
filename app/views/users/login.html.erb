<% title "Login" %>

<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 user new">
    <h1 class="text-center">Log in</h1>

    <%= form_tag(:action => 'attempt_login') do %>
      <div class="form-group">
        <%=
          text_field_tag(
            :email,
            nil,
            {
              :class => 'form-control',
              :placeholder => 'Email',
              :autofocus => ''
            }
          )
        %>
      </div>

      <div class="form-group">
        <%=
          password_field_tag(
            :password,
            nil,
            {
              :class => 'form-control',
              :placeholder => 'Password'
            }

          )
        %>
      </div>

      <%= submit_tag('Log In', class: 'btn btn-primary btn-block') %>
    <% end %>
  </div>
</div>