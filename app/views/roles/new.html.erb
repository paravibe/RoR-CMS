<% title "Add Role" %>

<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 user new">
    <h1 class="text-center">Add role</h1>

    <%= form_for(:role, :url => {:action => 'create'}) do |f| %>

      <%= render(:partial => 'form', :locals => {:f => f} ) %>

      <div class="form-buttons">
        <%= submit_tag('Add', class: 'btn btn-lg btn-primary btn-block') %>
      </div>

    <% end %>
  </div>
</div>
