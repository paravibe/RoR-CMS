<% @page_title = "Roles" %>

<h1>Roles</h1>

<ul class="nav nav-pills">
  <li><%= link_to('Add New Role', {:action => 'new'}, :class => 'action new') %></li>
</ul>

<% if !@roles.empty? %>
  <div class="margin-top-1 margin-bottom-1">
    <span class="badge"><%= pluralize(@roles.size, 'role') %></span>
  </div>

  <table class="table table-striped table-hover" summary="Roles">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Actions</th>
    </tr>
    <% @roles.each do |role| %>
      <tr class="<%= cycle('odd', 'even') %>">
        <td><%= role.id %></td>
        <td><%= role.name %></td>
        <td class="actions">
          <ul class="list-inline">
            <li>
              <a title="Edit" href="<%= url_for({:action => 'edit', :id => role.id}) %>"><i class="glyphicon glyphicon-edit"></i></a>
            </li>
            <li>
              <a title="Delete" href="<%= url_for({:action => 'delete', :id => role.id}) %>"><i class="glyphicon glyphicon-remove-sign"></i></a>
            </li>
          </ul>
        </td>
      </tr>
    <% end %>
  </table>
<% else %>
  <div class="well well-sm margin-top-1">Roles not found</div>
<% end %>
