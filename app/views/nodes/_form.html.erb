<%= error_messages_for(@node) %>


<%= f.fields_for(:node_title) do |nt| %>
  <div class="form-group">
    <%=
        nt.text_field(
            :title,
            class: 'form-control',
            required: '',
            placeholder: 'Title'
        )
    %>
  </div>
<% end %>

<div class="form-group">
  <%= f.label(:user_id, "Author") %>
  <%= f.select(:user_id, @users.map {|u| [u.name, u.id]}, {}, {class: 'form-control'}) %>
</div>

<div class="form-group">
  <div class="checkbox">
    <label>
      <%= f.check_box(:status) %>
      Published
    </label>
  </div>
</div>
