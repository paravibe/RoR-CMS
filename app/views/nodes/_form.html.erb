<%= error_messages_for(@node) %>

<%= f.fields_for :node_title do |nt| %>
  <div class="form-group">
    <%=
        nt.text_field(
            :title,
            class: 'form-control',
            required: '',
            placeholder: 'Title'
        )
    %>
  </div>
<% end %>

<% if !@node.image.url.nil? %>
  <div class="form-group">
    <div class="image-preview">
      <%= image_tag @node.image.url :thumb %>
    </div>
  </div>
<% end %>

<div class="form-group">
  <%=
    f.file_field(:image)
  %>
</div>

<div class="form-group">
  <%=
      f.text_area(
          :body,
          class: 'form-control',
          required: '',
          placeholder: 'Body',
          rows: 10
      )
  %>
</div>

<div class="form-group">
  <%= f.label(:user_id, "Author") %>
  <%=
      f.select(
          :user_id,
          @users.map { |u| [u.name, u.id] },
          {
              :selected => @current_user.id
          },
          {
              class: 'form-control'
          }
      )
  %>
</div>

<div class="form-group">
  <div class="checkbox">
    <label>
      <%= f.check_box(:status) %>
      Published
    </label>
  </div>
</div>
